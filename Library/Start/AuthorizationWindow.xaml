<Window x:Class="Library.Start.AuthorizationWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"   
		mc:Ignorable="d"
		WindowStartupLocation="CenterScreen"
		WindowStyle="None" 
		AllowsTransparency="True"
		Background="Transparent"  x:Name="window" MouseLeftButtonDown="Window_MouseLeftButtonDown"  Height="550" Width="500">
	<Grid>
        <Border CornerRadius="10" x:Name="border" Focusable="True">
			<Border.Background>
				<LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
					<GradientStop Color="{StaticResource DarkBlueTopRightColor}" Offset="0"/>
					<GradientStop Color="{StaticResource DarkBlueBottomLeftColor}" Offset="1"/>
				</LinearGradientBrush>
			</Border.Background>
		</Border>

        <fa:IconImage Width="28"  VerticalAlignment="Top" HorizontalAlignment="Left" Icon="DoorOpen"
					  Height="25" Foreground="#7071f0" Margin="7 10 0 0"/>

		<TextBlock Text="Авторизация" Style="{StaticResource titlePogram}" Margin="47 10 0 10"/>
		<Grid>
            <Button TabIndex="5" x:Name="btnExit" VerticalAlignment="Top" ToolTip="Закрыть" Click="btnExit_Click" Style="{StaticResource btnCrossAndRollUp}">
                <fa:IconImage  Icon="PowerOff" Style="{StaticResource fa:IconImageTopButton}"/>
            </Button>
			
			<Border  CornerRadius="20"                     
                     BorderBrush="DarkBlue"
                     BorderThickness="2"
                     HorizontalAlignment="Center"											
				     VerticalAlignment="Center" MouseLeftButtonDown="Border_MouseLeftButtonDown"  Width="280" Height="320">

				<Border.Background>

					<LinearGradientBrush>

						<GradientStop Color="#CEE3FF" Offset="0.2"></GradientStop>
						<GradientStop Color="#E0FFFF" Offset="0.7"></GradientStop>
					</LinearGradientBrush>
				</Border.Background>

                <StackPanel VerticalAlignment="Center" Width="auto" Height="auto" HorizontalAlignment="Center" Margin="0 0 0 20">

					<TextBlock HorizontalAlignment="Center" Margin="0 0 0 30"  FontSize="18">Авторизация</TextBlock>



                    <TextBox TabIndex="0"  GotMouseCapture="tBLogin_GotMouseCapture"  Style="{StaticResource TextBox}" Margin="0 10 0 0" Width="230"  Name="tBLogin"/>

                    <fa:IconImage x:Name="iconLogin" Icon="UserAlt" HorizontalAlignment="Left" Foreground="Gray" Margin="10 -30 0 0"/>
                    
                    <TextBlock x:Name="Placeholder" IsHitTestVisible="False"
                       TextWrapping="Wrap"                      
                       Text="Логин"
                       Margin="35 -30 0 0"
                               
                       VerticalAlignment="Center"                       
                       Foreground="DarkGray"
                       HorizontalAlignment="Left">

                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="FontFamily"  Value="Comic Sans MS"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=tBLogin}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>



                    <TextBlock HorizontalAlignment="Right" Margin="0 0 10 20">
						<TextBlock.Style>

							<Style TargetType="TextBlock">
								<Setter Property="FontFamily"  Value="Comic Sans MS"/>
								<Setter Property="FontWeight" Value="Bold"/>
								<Style.Triggers>
									<DataTrigger Binding="{Binding Text.Length, ElementName=tBLogin}" Value="24">
										<Setter Property="Foreground" Value="Red"/>
									</DataTrigger>
								</Style.Triggers>
							</Style>
						</TextBlock.Style>
						<Run Text="{Binding Text.Length, ElementName=tBLogin, Mode=OneWay}"/>/<Run Text="{Binding MaxLength, ElementName=tBLogin}"/>
					</TextBlock>

                    <PasswordBox TabIndex="1" PasswordChanged="pBPassword_PasswordChanged"  GotMouseCapture="pBPassword_GotMouseCapture"  Name="pBPassword" Width="230"/>
                    <TextBox TabIndex="2" TextChanged="tBPassword_TextChanged" GotMouseCapture="tBPassword_GotMouseCapture"  x:Name="tBPassword" Style="{StaticResource TextBox}"  Width="230" Visibility="Collapsed"/>

                    <fa:IconImage x:Name="iconPassword" Icon="Lock" HorizontalAlignment="Left" Foreground="Gray" Margin="10 -30 0 0"/>
                    <TextBlock x:Name="textBlockPassword" Visibility="Visible"                                      
                       Text="Пароль"
                       Margin="35 -30 0 0"
                       VerticalAlignment="Center"                       
                       Foreground="DarkGray"
                       HorizontalAlignment="Left"/>
                    
                    <TextBlock HorizontalAlignment="Right" Name="text" Margin="0 0 10 0">
				      /24
					</TextBlock>
					<TextBlock x:Name="pasText" HorizontalAlignment="Right" Margin="0 -17 31 0" >
					
					   0
					</TextBlock>

                    <CheckBox TabIndex="3" IsEnabled="False"  Content="Показать пароль" x:Name="checkPassword" Click="checkPassword_Click"></CheckBox>


                    <Button TabIndex="4" Margin="0 20 0 0" Width="230" Click="btnVhod_Click" Name="btnVhod"  Content="Войти" IsDefault="True"/>



                </StackPanel>

			</Border>

		</Grid>
	</Grid>
</Window>
